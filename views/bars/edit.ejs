<% include ../partials/header %>

<div class="row">
  <h1 style="text-align: center;">Edit your Bar</h1>
  <div style="width: 30%; margin: 25px auto;">
    <form action="/bars/<%= bar._id %>?_method=PUT" method="post">
      <div class="form-group">
        <input class="form-control" type="text" value="<%= bar.name %>" name='bar[name]'>
      </div>

      <div class="form-group">
        <input class="form-control" type="number" value='<%= bar.price %>' name='bar[price]' min='0.00' step='1.00'>
      </div>

      <div class="form-group">
        <input class="form-control" type="text" value="<%= bar.image %>" name='bar[image]'>
      </div>

      <div class="form-group">
        <input class="form-control" type="text" value="<%= bar.description %>" name='bar[description]'>
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Submit</button>
      </div>

    </form>
    <a href="/bars">Go Back</a>
  </div>

</div>

<% include ../partials/footer %>
