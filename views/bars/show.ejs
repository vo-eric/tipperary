<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">Tipperary</p>
      <div class="list-group">
        <li class="list-group-item active">Item Ein</li>
        <li class="list-group-item">Zwei</li>
        <li class="list-group-item">Drei</li>
      </div>
    </div>

    <div class="col-md-9">
      <div class="thumbnail">
        <img class="image-responsive" src="<%= bar.image %>">
        <div class="caption-full">
          <h4 class="pull-right">$$$$</h4>
          <h4><%= bar.name %></h4>
          <p><%= bar.description %></p>
          <p>
            <em>Submitted By <%= bar.author.username %></em>
          </p>
          <a class="btn btn-warning" href="/bars/<%= bar._id %>/edit">Edit</a>
          <form id="delete-form" action="/bars/<%= bar._id %>?_method=DELETE" method="post">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>

      <div class="well">
        <div class="text-right">
          <a class="btn btn-success" href="/bars/<%= bar._id %>/comments/new">Add a Comment</a>
        </div>
        <hr>
        <% bar.comments.forEach((comment) => { %>
          <div class="row">
            <div class="col-md-12">
              <%= comment.author.username %>
              <span class="pull-right">10 days ago</span>
              <p>
                <strong><%= comment.text %></strong>
              </p>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>

</div>

<% include ../partials/footer %>
